    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const chartData = {
                labels: ['Pozos ptimos', 'Pozos con Desviaci贸n', ['Pozos con Sobre', 'Perforaci贸n'], 'Pozos con Agua'],
                datasets: [{
                    label: '% del Total de Pozos',
                    data: [45, 26, 17, 12],
                    backgroundColor: [
                        '#2ECC71',
                        '#F39C12',
                        '#E74C3C',
                        '#3498DB'
                    ],
                    borderColor: [
                        '#28B463',
                        '#D68910',
                        '#CB4335',
                        '#2E86C1'
                    ],
                    borderWidth: 2,
                    borderRadius: 5,
                    borderSkipped: false,
                }]
            };

            const chartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        enabled: true,
                        backgroundColor: '#1C2833',
                        titleFont: { size: 16, weight: 'bold' },
                        bodyFont: { size: 14 },
                        padding: 12,
                        cornerRadius: 8,
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                if (Array.isArray(label)) {
                                  return label.join(' ');
                                } else {
                                  return label;
                                }
                            },
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += context.parsed.y + '%';
                                }
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            font: {
                                size: 14,
                                weight: 'bold'
                            }
                        }
                    },
                    x: {
                       ticks: {
                            font: {
                                size: 14,
                                weight: 'bold'
                            }
                        },
                         grid: {
                            display: false
                        }
                    }
                }
            };

            const ctx = document.getElementById('wellResultsChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: chartData,
                options: chartOptions
            });
        });
    </script>
